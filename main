// enemy actions

/* "How many fingers am I holding up?"
	player has x guesses - if it's correct, no damage taken
	if it's wrong, x damage taken. */
	
			var howManyFingers = function() {
				document.getElementById("checkGuess").onclick = function() {
					var guess = document.getElementById("FingersGuessBox").value;
				
					var answer = Math.floor(Math.random() * (6 - 1)) + 1;
					if (guess == answer){
						alert(guess + " is correct! Attack avoided!");
					} else {
						alert("nope, try again sucker");
						// add > or < to tell player to guess higher or lower
					}
				}
			}
			
			howManyFingers();
			
		</script>


